html 
    head 
        title Productos 
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous")
    body
        header(class='text-center') 
            a(href="/") Inicio
            a(href="/productos" class="p-2") Ver productos
        main 
            h1(class='text-center pt-5') Productos
            
            div(class='container')
                table.table.table-striped
                    tr
                        th Nombre
                        th Precio
                        th Imagen
            div(class='container')
                each item in getProducts
                    table.table.table-striped
                        tr
                            td= item.title
                            td= item.price
                            td
                                img(src= item.thumbnail alt='Thumbnail' )

                div(class='container') 
                    p(class='text-center') !{error}


                div(class='text-center' style='width:100%;')
                   button(type='button', class='btn btn-primary', onclick="location.href='/'") Agregar productos


    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous")