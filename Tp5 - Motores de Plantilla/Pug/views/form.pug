html 
    head 
        title Form 
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous")
    body 
        header(class='text-center') 
            a(href="/") Inicio
            a(href="/productos" class="p-2") Ver productos
        main       
            h1(class='text-center pt-5') Ingresa los datos del producto
            div(class='container shadow-lg p-1 mb-5 rounded')
                form(action='/productos', method='POST')
                    div(class='mb-3')
                        label(for='title', class='form-label') Nombre del producto
                        input(type='text', class='form-control', name='title')
                    div(class='mb-3')
                        label(for='price', class='form-label') Precio del producto 
                        input(type='number', class='form-control', name='price')
                    div(class='mb-3')
                        label(for='thumbnail', class='form-label') Imagen del Producto 
                        input(type='text', class='form-control', name='thumbnail')
                    div(class='text-center' style='width:100%;')
                    button(type="submit", class='btn btn-success me-2') Enviar  
                    button(type='button', class='btn btn-primary', onclick="location.href='/productos'") Ver productos

